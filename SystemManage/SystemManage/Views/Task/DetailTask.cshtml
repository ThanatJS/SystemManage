@model SystemManage.Models.TaskModel
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js"></script>
    <title>Task</title>
@using (Html.BeginForm("EditTask","Task", FormMethod.Post))
{
    @Html.AntiForgeryToken()
        <div class="container">
            <div class="card shadow" style="margin-top: 50px;margin-bottom: 50px">
                <div class="card-body">
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="form-group">
                                <label for="taskname">Task Name :</label>
                                @Html.HiddenFor(m => m.TaskID)
                                @Html.EditorFor(m => m.TaskName, new { @class = "form-controll" })
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="form-group">
                                <label for="comment">Description for Task :</label>
                                @Html.TextAreaFor(m => m.DescriptionTask, new { @class = "form-control",@type ="TextArea" })
                            </div>
                        </div>
                    </div>
                    <div class="card">
                        <div class="card-body shadow">
                            <div class="row">
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label for="taskname">SubTask Name :</label>
                                        @Html.HiddenFor(m => m.SubTaskID)
                                        @Html.EditorFor(m => m.SubTaskNames, new { @class = "form-control" })
                                    </div>
                                </div>
                                <div class="col-sm-1"></div>
                                <div class="col-sm-4">
                                    <div class="input-group">
                                        <label class="label" for="step" style="margin-right: 10px">Step :</label>
                                        <div class="rs-select2 js-select-simple select--no-search " style="width: 100px">
                                            <select name="step">
                                                <option>1</option>
                                                <option>2</option>
                                                <option>3</option>
                                            </select>
                                            <div class="select-dropdown"></div>
                                        </div>
                                        <label class="label" for="level" style="margin-right: 10px">Level :</label>
                                        <div class="rs-select2 js-select-simple select--no-search " style="width: 100px">
                                            <select name="level">
                                                <option>1</option>
                                                <option>2</option>
                                                <option>3</option>
                                            </select>
                                            <div class="select-dropdown"></div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-12">
                                    <div class="form-group">
                                        <label for="comment">Description for Developer :</label>
                                        @Html.TextAreaFor(m => m.SubTasksDes, new { @class = "form-control", @type = "TextArea" })
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-8">
                                    <div class="input-group">
                                        <label class="label" style="margin-right: 10px">ผู้รับมอบหมาย :</label>
                                        @Html.EditorFor(m => m.SubDevID, new { @class = "form-control" })
                                    </div>
                                    <div class="form-group" style="margin-top: 20px">
                                        <input type="file" class="form-control-file" id="exampleFormControlFile1">
                                    </div>
                                </div>
                                <div class="col-sm-4">
                                    <div class="input-group">
                                        <label class="label" style="margin-right: 10px">Send Date :</label>
                                        @Html.EditorFor(m => m.SubTaskDateSend, new { @class = "form-control" })
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div style="text-align: center;margin-top: 20px">
                    </div>
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="form-group">
                                <label for="comment">Description for Tester :</label>
                                @Html.TextAreaFor(m => m.DescriptionTest, new { @class = "form-control", @type = "TextArea" })
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-8">
                            <div class="input-group">
                                <label class="label" style="margin-right: 10px">ผู้ทดสอบ :</label>
                                @Html.EditorFor(m => m.TestID, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="col-sm-4">
                            <div class="input-group">
                                <label class="label" style="margin-right: 10px">Send Date :</label>
                                @Html.EditorFor(m => m.TestSentDate, new { @class = "form-control" })
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="form-group">
                                <label for="comment">Description for Quality Assurance :</label>
                                @Html.TextAreaFor(m => m.DescriptionQA, new { @class = "form-control", @type = "TextArea" })
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-8">
                            <div class="input-group">
                                <label class="label" style="margin-right: 10px">ผู้ตรวจงาน :</label>
                                @Html.EditorFor(m => m.QAID, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="col-sm-4">
                            <div class="input-group">
                                <label class="label" style="margin-right: 10px">Send Date :</label>
                                @Html.EditorFor(m => m.QASentDate, new { @class = "form-control" })
                            </div>
                        </div>
                    </div>
                    <div class="row" style="margin-top: 20px">
                        <div class="col-sm-10"></div>
                        <div class="col-sm-2">
                            @if(Model.TestID == Convert.ToInt32(Session["userID"]))
                            { 
                            <a href="@Url.Action("AddDefect","Defect")"><button type="button" class="btn btn-outline-success btn-block">Defect</button></a>
                            }
                        </div>
                    </div>
                    <div class="row" style="margin-top: 20px">
                        <div class="col-sm-10">
                            <div class="form-group">
                                <input type="file" class="form-control-file" id="exampleFormControlFile1">
                            </div>
                        </div>
                        <div class="col-sm-2">
                           <a href="@Url.Action("ShowTask")"><button type="button" class="btn btn-outline-danger">Back</button></a>
                            @if (Model.Handle == Convert.ToInt32(Session["userID"]) || Model.CreateBy == Convert.ToInt32(Session["userID"]))
                            {
                            <button type="submit" class="btn btn-outline-primary">Submit</button>
                            }
                        </div>
                    </div>
                    
                </div>
            </div>
        </div>
}
        <style>
            input, select, textarea {
                max-width: 2800px;
            }
        </style>