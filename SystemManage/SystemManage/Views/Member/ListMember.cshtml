<script>
    function CheckMember(userID) {
        if (confirm("เพิ่มสมาชิกเข้าสู้โครงการใช่หรือไม่")) {
            alert("ดำเนินการเสร็จสิน");
            $.ajax({
                type: "POST",
                url: "@(Url.Action("CheckMember", "Member"))",
                data: { userID: userID },
                dataType: "json",
                success: function (data) {
                    if (data.c == true) {
                        alert("มีผู้ใช้อยู่ระบบโครงการแล้ว");
                    }
                    }
                })
            };
    };
</script>
