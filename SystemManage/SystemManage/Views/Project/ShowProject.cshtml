@using SystemManage.Models;
<html lang="en">
<head>
    <title>My Project</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js"></script>
    <link rel="shortcut icon" type="image/png" href="assets/images/icon/favicon.ico">
    <link rel="stylesheet" href="~/assets/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/assets/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/assets/css/themify-icons.css">
    <link rel="stylesheet" href="~/assets/css/metisMenu.css">
    <link rel="stylesheet" href="~/assets/css/owl.carousel.min.css">
    <link rel="stylesheet" href="~/assets/css/slicknav.min.css">
 </head>
<body>
    
    <div class="container">
        <div class="card shadow" style="margin-top: 100px">
            <div class="card-body">
                <div class="row">
                    <div class="col-sm-12">
                        <h2 class="text-center">My Project</h2>
                        <table class="table table-bordered">
                            <thead>
                                <tr class="table-info">
                                    <th>เข้า</th>
                                    <th>No</th>
                                    <th>Project</th>
                                    <th>Status</th>
                                    <th>Percent</th>
                                    <th>Update Date</th>
                                    <th>Create Date</th>
                                    <th>Send Date</th>
                                    <th>Edit</th>
                                    <th>Delete  </th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    var role = 0;
                                    var i = 1;
                                    foreach (var item in (List<ProjectModel>)ViewBag.DataList)
                                    {
                                        <tr>
                                            <td><a href="@Url.Action("Getdata", new { ProjectID = item.ProjectID })"><i class="glyphicon fa fa-archive"></i></a></td>
                                            <td>@i</td>
                                            <td>@item.ProjectName</td>
                                            <td>@item.ProjectStatus</td>
                                            <td>@item.TotalPercent %</td>
                                            <td>
                                                @if (item.UpdateDate >= item.CreateDate)
                                                {
                                                    @item.UpdateDate.ToString("dd/MM/yyyy");
                                                }
                                            </td>
                                            <td>@item.CreateDate.ToString("dd/MM/yyyy")</td>
                                            <td>@item.ProjectSendDate.ToString("dd/MM/yyyy")</td>
                                            @if (item.ProjectRole == 1)
                                            {
                                            <td>
                                                <a href="@Url.Action("EditProject", new { ProjectID = item.ProjectID })"><i class="glyphicon fa fa-diamond"></i></a>
                                            </td>
                                                <td>
                                                    <a href="@Url.Action("DeleteProject", new { ProjectID = item.ProjectID })"><i class="glyphicon fa fa-archive"></i></a>
                                                </td>
                                            }
                                            else
                                            {
                                                <td></td>
                                                <td></td>
                                            }
                                        </tr>
                                        role=@item.ProjectRole;
                                        i++;
                                    }
                                 }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <div class="row" style="margin-top: 10px">
            <div class="col-sm-3 ">
            </div>
            <div class="col-sm-3"></div>
            <div class="col-sm-3"></div>
            <div class="col-sm-3"> @if (role != 5) { <a href="@Url.Action("AddProject")"><button type="button" class="btn btn-outline-primary btn-block shadow">New Project</button></a>}</div>
        
        </div>
    </div>

</body>
</html>
